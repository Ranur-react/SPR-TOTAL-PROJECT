@{
    ViewData["Title"] = "Index";
    //@addTagHelper *, Syncfusion.EJ2
}
@section HeaderTag{
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />
    <link href="~/css/litepickerCustome.css" rel="stylesheet" />

}
<div class="row">
    <div class="col-md-6">
        <h5>Detail Informasi Proyek</h5>
        <div class="card">
            <div class="card-body">
                <label for="proyekSelect" class="form-label">Pilih Proyek</label>
                <select id="proyekSelect" class="form-select" aria-label="Pilih Proyek">
                </select>
                <p><strong>Tanggal Mulai:</strong> <span id="proyekTanggalStart">2024-10-22</span></p>
                <p><strong>Tanggal Selesai</strong> <span id="proyekTanggalEnd">2024-10-22</span></p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <row>
            <h5>Detail Informasi User</h5>
            <div class="card">
                <div class="card-body">
                    <p><strong>Nama User</strong> <span id="usernameProyek">Jhon Doe</span></p>
                    <p><strong>Jabatan</strong> <span id="jabatanProyek">Super Admin</span></p>
                </div>
            </div>
        </row>
        <row>
            <div class="d-grid gap-2 mt-1">
                <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Ajukan SPR</button>
            </div>
        </row>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h5>Pencarian SPR</h5>
            <div class="card">
                <div class="card-body">
                    <label for="pencarianSelect" class="form-label">Pencarian Berdasarkan</label>
                    <select id="pencarianSelect" class="form-select" aria-label="Pilih">
                        <option value="1" selected>KODE SPR</option>
                        <option value="2">Tujuan Proyek</option>
                        <option value="3">Tanggal Permintaan</option>
                        <option value="4">Zona</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="row">

        <table id="tableSPR" class="display">
            <thead>
                <tr>
                    <th>Kode SPR </th>
                    <th>Zona</th>
                    <th>Tanggal SPR</th>
                    <th>Tujuan SPR</th>
                    <th>Nama Peminta</th>
                    <th>Nama Penyetuju 1 </th>
                    <th>Nama Penyetuju 2</th>
                    <th>Ada Detil</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                </tr>

            </tbody>
        </table>

    </div>


    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Ajukan SPR Material</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="row g-3 needs-validation" id="sprForm" novalidate>
    <div class="col-md-12">

        @*test datepicker*@
        <label for="litepickerRangePluginEmp">Mondem Date</label>
                                <div class="input-group input-group-joined" style="width: 16.5rem">
                                    <span class="input-group-text"><i data-feather="calendar"></i></span>
                                    <input class="form-control ps-0 pointer" id="litepickerRangePluginUniversal" placeholder="Select date range..." />
                                </div>
        @*end test*@
        <label for="tanggalMinta" class="form-label">Tanggal Minta</label>
        <input type="text" class="form-control datepicker" id="tanggalMinta" placeholder="Select Date">
        <div class="invalid-feedback">
            Please select a valid date.
        </div>
    </div>
    
    <div class="col-md-12">
        <label for="zonaSPR" class="form-label">Zona SPR</label>
        <input type="text" class="form-control" id="zonaSPR" value="000" required>
        <div class="invalid-feedback">
            Please provide a valid zone.
        </div>
    </div>
    
    <div class="col-md-12">
        <label for="tujuanSPR" class="form-label">Tujuan SPR</label>
        <input type="text" class="form-control" id="tujuanSPR" value="Logistik Proyek" required>
        <div class="invalid-feedback">
            Please provide a valid purpose.
        </div>
    </div>

    <div class="col-md-12">
        <label for="materialId" class="form-label">Material</label>
        <select class="form-select" id="materialId" required>
            <option selected disabled value="">Choose Material...</option>
            <!-- Options will be populated via AJAX -->
        </select>
        <div class="invalid-feedback">
            Please select a valid material.
        </div>
    </div>

    <div class="col-md-6">
        <label for="volume" class="form-label">Volume</label>
        <input type="number" class="form-control" id="volume" value="5" required>
        <div class="invalid-feedback">
            Please provide a valid volume.
        </div>
    </div>

    <div class="col-md-6">
        <label for="unit" class="form-label">Unit</label>
        <select class="form-select" id="unit" required>
            <option selected disabled value="">Choose Unit...</option>
            <option value="Unit 1">Unit 1</option>
            <option value="Unit 2">Unit 2</option>
            <option value="Unit 3">Unit 3</option>
        </select>
        <div class="invalid-feedback">
            Please select a valid unit.
        </div>
    </div>

    <div class="col-md-12">
        <label for="tanggalRencanaTerima" class="form-label">Tanggal Rencana Terima</label>
        <input type="text" class="form-control datepicker" id="tanggalRencanaTerima" placeholder="Select Date">
        <div class="invalid-feedback">
            Please select a valid date.
        </div>
    </div>

    <div class="col-12">
        <button class="btn btn-primary" type="submit">Submit form</button>
    </div>
</form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Reset</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Simpan</button>
                </div>
            </div>
        </div>
    </div>


